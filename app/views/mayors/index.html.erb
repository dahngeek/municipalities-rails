<p id="notice"><%= notice %></p>

<h1>Mayors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Nacionality</th>
      <th>Mail</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mayors.each do |mayor| %>
      <tr>
        <td><%= mayor.name %></td>
        <td><%= mayor.last_name %></td>
        <td><%= mayor.nacionality %></td>
        <td><%= mayor.mail %></td>
        <td><%= mayor.phone %></td>
        <td><%= link_to 'Show', mayor %></td>
        <td><%= link_to 'Edit', edit_mayor_path(mayor) %></td>
        <td><%= link_to 'Destroy', mayor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

